<div class="row sign-up-container
">
  <div class="col-md-8 col-sm-12 flexi">
    <div class="login-form center">
      <div class="text-center pink bold">
        <h2>Login</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email",  class: "form-background"} %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password",  class: "form-background"} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions flexi-vertical">
          <%= f.button :submit, "Sign in", class: "btn-ghost text-center login-btn mb-2" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-center" %><br />
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4 d-none d-md-block
 right-panel-login
">
    <div class="center right-panel-content">
      <div class="login-logo">
        <%= image_tag 'logo-simple.png', class: "login-logo"  %>
      </div>
      <div class="text-center pink bold">
        <h2>Welcome Back!</h2>
      </div>
      <div class="text-center subhead">
        Unlock your potential and take control of your career
      </div>
      <div class="text-center mt-2">
        New here?
      </div>
      <div class="flexi">
        <%= link_to "Sign Up", new_user_registration_path, class: "btn-ghost text-decoration-none text-center w-100" %>
      </div>
    </div>
  </div>
</div>
